#include <iostream>
using namespace std;

int main()
{
 double num1,num2,result;
 char op;
 cout<<"CALCULATOR"<<endl;
 cout<<"enter 1st number: ";
 cin>>num1;
 cout<<"enter 2nd number :";
 cin>>num2;
 cout<<"select opreation: "<<endl;
 cin>>op;
 
 switch(op)
 {
 case '+':
 result=num1+num2;
 cout<<num1<<"+"<<num2<<"="<<result<<endl;
 break;
 
 case '-':
 result=num1+num2;
 cout<<num1<<"-"<<num2<<"="<<result<<endl;
 break;
 
 case '*':
 result=num1+num2;
 cout<<num1<<"*"<<num2<<"="<<result<<endl;
 break;
 
 case '/':
 if(num2!=0)
 {
 result=num1/num2;
 cout<<num1<<"/"<<num2<<"="<<result<<endl;
 }
 else{ 
     cout<<"error due to DIVISIBAL BY ZERO";
 }
 break;
 default:
 cout<<"systeam error"<<endl;
break;
}
    return 0;
}
